{% macro cardPost(post) %}
  <div class="max-w-3xl m-auto mb-4">
    <div class="flex flex-col lg:flex-row-reverse rounded-lg overflow-hidden shadow-md">
      {% if post.data.image %}
        <a href="{{post.url | url }}">
        {% set imageCardPostPosition = post.data.imageCardPostPosition or 'center' %}
          {% img "" + post.data.image,
          post.data.title + " thumbnail",
          "block h-full w-full lg:max-h-60 lg:w-72 flex-none object-cover object-" + imageCardPostPosition
           %}
        </a>
      {% endif %}
      <div class="flex-1 flex flex-col px-6 py-4">
        <a href="{{post.url | url }}">
          <p class="font-bold text-xl hover:text-gray-700">
            {{post.data.title}}
            {# {% if env.NODE_ENV != "production" %} ({{post.data.status}}) {% endif %} #}
          </p>
          <p class="text-gray-700 text-xs mt-0 mb-2">
            <time datetime="{{ post.date | dateToFormat('yyyy-MM-dd') }}">{{ post.date | dateToFormat('LLL dd, yyyy') }}</time>
          </p>
          <p class="text-gray-700 text-base">
            {{ post.data.excerpt }}
          </p>
        </a>
        <div class="flex-1"></div>
        <div class="mt-4">
          {% for tag in post.data.tags %}
            {# Knock out the first iteration of the loop to drop the default "post" tag generated in `posts/posts.json`. #}
            {# If there's a better/easier way of doing this, please LMK.  #}
            {% if not loop.first %}
              <a href="/tags/{{ tag | slug }}/" class="inline-block bg-gray-200 hover:bg-gray-300 rounded-full px-3 py-1 mb-1 mr-1 text-sm text-gray-700">{{ tag }}</a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endmacro %}