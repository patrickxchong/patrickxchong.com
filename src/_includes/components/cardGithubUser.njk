<div class="bg-white shadow-canvas p-4 rounded max-w-xs sm:w-2/3 md:w-1/2 mx-auto">
  <div class="flex">
    <div class="mr-4 self-center"><img alt="{{ github.user.name }}'s Avatar"
            class="shadow sm:w-12 sm:h-12 w-10 h-10 rounded-lg"
            src="{{ github.user.avatar_url}}"></div>
    <div class="flex-grow ">
      <p class="text-gray-800 font-bold leading-tight">{{ github.user.name }}</p>
      <a href="{{ github.user.html_url }}"
            class="text-sm text-gray-800 mt-1 hover:underline">
            @{{ github.user.login }}</a>
    </div>
    <a href="{{ github.user.html_url }}"
          class="flex items-center text-xs self-start text-center text-black rounded shadow  px-2 py-1 bg-gray-300 hover:bg-gray-200">
      <div class="text-black font-normal mr-1">Follow </div>
      {% svg "github" %}
    </a>
  </div>
  <div class="mt-3 flex justify-between text-center mx-3">
    <a href="https://github.com/patrickxchong?tab=repositories">
      <p class="text-gray-700 font-bold">{{ github.user.public_repos }}</p>
      <p class="mt-1 text-xs text-gray-800 font-normal">Repos</p>
    </a>
    <a href="https://gist.github.com/patrickxchong">
      <p class="text-gray-700 font-bold">{{ github.user.public_gists }}</p>
      <p class="mt-1 text-xs text-gray-800 font-normal">Gists</p>
    </a>
    <a href="https://github.com/patrickxchong?tab=followers">
      <p class="text-gray-700 font-bold">{{ github.user.followers }}</p>
      <p class="mt-1 text-xs text-gray-800 font-normal">Followers</p>
    </a>
  </div>
</div>