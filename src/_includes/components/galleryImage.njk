{% macro galleryImage(images) %}
  <section x-data="{}">
    <div class="container mx-auto grid gap-2 grid-cols-3">
      {%- for image in images -%}
        <div @click="$dispatch('img-modal', {title: '{{image.title}}', src: '{{image.url}}'})"
      class="image relative cursor-pointer">
          <img src="{{ image.url }}" alt="{{ image.title }}"
          class="w-full square object-cover object-center"/>
        </div>
      {%- endfor -%}
    </div>
  </section>
  <style>
    .image:after {
      content: '\A';
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      background: rgba(0, 0, 0, 0.2);
      opacity: 0;
      transition: all 0.2s;
    }

    .image:hover:after {
      opacity: 1;
    }
  </style>

{% endmacro %}